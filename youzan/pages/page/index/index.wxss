/**index.wxss**/
/*首页内容部分*/
.content{
    padding: 5% 2% 0 2%;
}
.content_box{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.content_list{
    width: 100%;
    display: flex;
    flex-direction: column;
    padding-bottom: 1rem;
}
.content_img{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
}
.contentImg_img{
    width: 100%;
    height: 10rem;
}
.content_title{
    padding: 0.5rem 0 0.5rem 0;
    font-size: 0.9rem;
    overflow-wrap: break-word;
}
.content_msg{
    padding: 20rpx 0;
    font-size: 0.8rem;
    display: flex;
    color: #a6a6a6;
    align-items: center;
}